{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react", "prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off", // Disable this rule for React 17+
    "jsx-a11y/anchor-is-valid": "off", // Optional: for Next.js link handling
    "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".tsx"] }],
    "react/jsx-indent": ["error", 2],
    "eslint-plugin-import/prefer-default-export": "off",
    "react/function-component-definition": "off",
    "import/extensions": "off",
    "import/prefer-default-export": "off",
    "import/no-unresolved": "off", // was returning false positives,
    "react/no-array-index-key": "off",
    "no-shadow": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "react/require-default-props": "off",
    "import/order": "off",
    "comma-dangle": "off",
    "function-paren-newline": "off",
    "implicit-arrow-linebreak": "off",
    "nonblock-statement-body-position": "off",
    "curly": "off",
    "react/jsx-one-expression-per-line": "off",
    "object-curly-newline": "off"
  }
}
